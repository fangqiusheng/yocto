<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Yocto{% endblock %}</title>
        {% block meta %}{% endblock %}

        <!-- fav and touch icons -->
        {% image '@YoctoLayoutBundle/Resources/public/images/favicon.ico' output='favicon.ico' %}
        <link rel="shortcut icon" href="{{ asset_url }}" />
        {% endimage %}

        {% block stylesheets %}
            {% stylesheets filter='cssrewrite'
                'bundles/yoctolayout/css/*.css'
            %}
            <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {% javascripts
                '@YoctoLayoutBundle/Resources/public/js/jquery-1.10.2.min.js'
                output='js/app.js'
            %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
